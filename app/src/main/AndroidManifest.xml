<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hw.rms.roommanagementsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
            android:name="androidx.multidex.MultiDexApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:allowClearUserData="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        <!-- Root Activity for handling before entering activity when app first open-->
        <activity
                android:name=".RootActivity"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".AdminActivity.AdminSettingActivity"
                android:screenOrientation="landscape">
        </activity>
        <activity
                android:name=".AdminActivity.AdminLoginActivity"
                android:screenOrientation="landscape">
        </activity>
        <activity
                android:name=".Activity.RoomListActivity"
                android:screenOrientation="landscape">
        </activity>
        <activity
                android:name=".Activity.AvailableMainActivity"
                android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>