<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_available"
        tools:context=".Activity.AvailableMainActivity">

    <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_margin="16dp"
    >
        <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
        />

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="end"
                android:text="06 August 2019"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_book"
        />

        <TextView
                android:id="@+id/tv_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:text="12:12"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_light"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
    >
        <LinearLayout
                android:id="@+id/layout_content_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="32dp"
        >

            <TextView
                    android:id="@+id/tv_room_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="50sp"
                    android:text="Ruang Sidang Menteri"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_light"
            />

            <Button
                    android:id="@+id/btn_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:clickable="false"

                    android:padding="22dp"
                    android:paddingStart="90dp"
                    android:paddingEnd="90dp"
                    android:text="Available"
                    android:textAllCaps="false"
                    android:textSize="30sp"

                    android:background="@color/status_green"
                    android:fontFamily="@font/gotham_bold"
            />
            <TextView
                    android:id="@+id/tv_time_meeting_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="12:00 - 13:00"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham_bold"
            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
            >
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="20dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"

                        android:text="Book Now"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:fontFamily="@font/gotham_light"
                        android:textColor="@color/white"

                        android:background="@drawable/transparent_bg_bordered"
                />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="20dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"

                        android:text="Schedule"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:fontFamily="@font/gotham_light"
                        android:textColor="@color/white"

                        android:background="@drawable/transparent_bg_bordered"
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_content_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
        >

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_iv_vv"
                    android:layout_width="500dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
            >
            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp"
            >

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                >

                </androidx.viewpager.widget.ViewPager>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
    >
        <Button
                android:id="@+id/btn_pref_schedule_meeting"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/ic_baseline_navigate_before_24px_wht"
        />
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_bottom_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
        >
        </androidx.viewpager.widget.ViewPager>
        <Button
                android:id="@+id/btn_next_schedule_meeting"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/ic_baseline_navigate_next_24px_wht"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/black"
    >
        <TextView
                android:id="@+id/tv_running_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/white"
        />

    </LinearLayout>

</LinearLayout>