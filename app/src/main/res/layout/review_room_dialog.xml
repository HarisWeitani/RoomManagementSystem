<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/curve_edge_box"
        android:padding="32dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Ruangan : "

            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_bold"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/tv_room_name_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Ruangan"

            android:textSize="35sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_bold"
            android:layout_marginBottom="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_survey_poor"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/survey_bad"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poor"
                    android:textColor="@color/white"
                    android:textSize="30sp"

                    android:fontFamily="@font/gotham_bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="64dp"
                >
                <ImageView
                    android:id="@+id/iv_survey_bad"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/survey_netral_bad"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bad"
                    android:textColor="@color/white"
                    android:textSize="30sp"

                    android:fontFamily="@font/gotham_bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="64dp"

                >
                <ImageView
                    android:id="@+id/iv_survey_okay"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/survey_netral"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Okay"
                    android:textColor="@color/white"
                    android:textSize="30sp"

                    android:fontFamily="@font/gotham_bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="64dp"

                >
                <ImageView
                    android:id="@+id/iv_survey_good"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/survey_netral_good"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    android:textColor="@color/white"
                    android:textSize="30sp"

                    android:fontFamily="@font/gotham_bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"

                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_survey_excellent"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/survey_good"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excellent"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:maxLines="1"

                    android:fontFamily="@font/gotham_bold"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>