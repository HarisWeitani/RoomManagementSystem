<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        tools:context=".AdminActivity.AdminSettingActivity">

    <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_margin="16dp"
    >

        <Button
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_back_white_24dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textSize="20sp"
                android:layout_gravity="center"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="end"
                android:text="06 August 2019"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
        />

        <TextClock
                android:id="@+id/tc_enter_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:format24Hour="HH:mm"
                android:format12Hour="@null"
                android:gravity="center"
                android:text="12:12"
                android:textSize="30sp"
                android:textColor="@color/white"
        />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="64dp"
    >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="32dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"

                android:orientation="vertical"
                android:background="@color/setting_grey"

        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Setting"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/white"
                    android:textSize="25sp"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="This page allows you to change configuration for the system"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/white"
                    android:textSize="20sp"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="_________________"
                    android:fontFamily="@font/gotham_book"
                    android:textColor="@color/white"
                    android:textSize="20sp"
            />
        </LinearLayout>

        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_weight="1"
                android:background="@color/setting_grey"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:orientation="vertical"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"

                        android:text="Setting Pin"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_bold"
                />

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/edit_text_box"

                        android:textColor="@color/white"
                        android:hint="4 Digits"
                        android:maxLength="4"
                        android:inputType="number"
                        android:fontFamily="@font/gotham_book"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Screen On "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gotham_bold"
                />

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:text="Always On"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Server URL"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"

                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                        android:hint="Server URL"
                />
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try Connection"
                        android:layout_marginBottom="32dp"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Room name"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <Spinner
                        android:id="@+id/spinner_room_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"

                        android:text="Serial Number"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"

                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                        android:hint="Serial Number"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"

                        android:text="License"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"

                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                        android:hint="License"
                />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="70dp"
                        android:layout_gravity="center"
                        android:text="Save And Exit"
                />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>