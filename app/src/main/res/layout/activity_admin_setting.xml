<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AdminSettingActivity">
m
    <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_margin="16dp"
    >

        <Button
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_back_white_24dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textSize="20sp"
                android:layout_gravity="center"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="end"
                android:text="06 August 2019"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"
        />

        <TextClock
                android:id="@+id/tc_enter_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:format24Hour="HH:mm"
                android:format12Hour="@null"
                android:gravity="center"
                android:text="12:12"
                android:textSize="30sp"
                android:textColor="@color/white"
        />
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Setting Pin"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />

                <EditText
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"

                        android:hint="4 Digits"
                        android:maxLength="4"
                        android:inputType="number"
                />
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try Connection"
                        android:visibility="invisible"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Screen On "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Always On"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Server URL"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <EditText
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                        android:hint="Server URL"
                />
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try Connection"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Room name"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <Spinner
                        android:id="@+id/spinner_room_name"
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Serial Number"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <EditText
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                        android:hint="Serial Number"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
            >
                <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="License"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                />
                <EditText
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box"
                        android:textColor="@color/white"
                        android:hint="License"
                />
            </LinearLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Save And Exit"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>