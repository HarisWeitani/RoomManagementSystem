<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        tools:context=".Activity.ScheduleCalendarActivity">

    <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:layout_margin="16dp"
    >

        <Button
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_back_white_24dp"
        />

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="end"
                android:text="06 August 2019"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_book"
        />

        <TextView
                android:id="@+id/tv_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:text="12:12"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_light"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="64dp"

    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/setting_grey"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/calendar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"

                    android:text="8 Agustus 2019"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:fontFamily="@font/gotham_bold"
            />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calendar_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:layout_margin="16dp"
            >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <com.applandeo.materialcalendarview.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="64dp"
                app:type="one_day_picker"
                app:headerColor="@color/calendar_header_bg"
                app:abbreviationsBarColor="@color/calendar_bg"
                app:pagesColor="@color/calendar_bg"
                app:daysLabelsColor="@color/calendar_page_number_unselected"
                app:selectionColor="@color/calendar_page_number_selected_bg"
                app:highlightedDaysLabelsColor="@color/white"
        />

    </LinearLayout>


</LinearLayout>